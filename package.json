{
  "name": "doogu",
  "description": "A wrapper around modern JavaScript tools",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Beni Arisandi (https://stilearning.com)",
  "repository": "https://github.com/bent10/doogu",
  "keywords": [
    "javascript",
    "typescript",
    "lint",
    "linter",
    "eslint",
    "build",
    "watch",
    "test",
    "coverage",
    "development",
    "cli",
    "doogu"
  ],
  "files": [
    ".prettierrc",
    "config",
    "readme.md",
    "license"
  ],
  "eslintConfig": {
    "extends": "./config/eslint.json"
  },
  "scripts": {
    "test": "eslint \"./config\" --ext \".js,.json\" --cache --cache-location \"node_modules/.cache/.eslintcache\""
  },
  "dependencies": {
    "@types/node": "^18.16.19",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-v8": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^3.0.0",
    "typescript": "^4.9.5",
    "vite": "^4.4.4",
    "vitest": "^0.33.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "changelog.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "changelog.md"
          ],
          "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  }
}
