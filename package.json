{
  "name": "doogu",
  "description": "A wrapper around modern JavaScript tools",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Beni Arisandi (https://stilearning.com)",
  "repository": "https://github.com/bent10/doogu",
  "keywords": [
    "javascript",
    "typescript",
    "lint",
    "linter",
    "eslint",
    "build",
    "watch",
    "test",
    "coverage",
    "development",
    "cli",
    "doogu"
  ],
  "files": [
    "config",
    "readme.md",
    "license"
  ],
  "eslintConfig": {
    "extends": "./config/eslint.json"
  },
  "prettier": "./config/prettier.json",
  "scripts": {
    "test": "eslint \"./config\" --ext \".js,.json\" --cache --cache-location \"node_modules/.cache/.eslintcache\""
  },
  "dependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.6",
    "@swc/helpers": "^0.4.11",
    "@swc/jest": "^0.2.23",
    "@tsconfig/node12": "^1.0.11",
    "@tsconfig/node14": "^1.0.3",
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^28.1.8",
    "@types/node": "^17.0.27",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.3",
    "typescript": "^4.8.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "changelog.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "changelog.md"
          ],
          "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  }
}
